{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend tests for Workflow Library and AI Email features",
  "main": "src/app.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:workflow": "jest tests/workflowTemplate.test.js",
    "test:ai": "jest tests/aiEmail.test.js",
    "test:integration": "jest tests/integration.test.js"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "src/controllers/**/*.js",
      "src/services/**/*.js",
      "src/routes/**/*.js",
      "!src/app.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@jest/globals": "^29.7.0"
  }
}
