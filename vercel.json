{
  "version": 2,
  "installCommand": "npm --prefix frontend install",
  "buildCommand": "npm --prefix frontend run build && npx shx rm -rf dist && npx shx cp -r frontend/dist dist",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}